      const cityFilter = document.getElementById('cityFilter');
      const storesBody = document.getElementById('storesBody');
      const searchInput = document.getElementById('searchInput');
      const storeCount = document.getElementById('storeCount');

      // Populate city dropdown
      const citySet = new Set(stores.map(s => s.city));
      [...citySet].sort().forEach(c => {
        const opt = document.createElement('option');
        opt.value = c; opt.textContent = c; cityFilter.appendChild(opt);
      });

      function render() {
        const q = searchInput.value.trim().toLowerCase();
        const city = cityFilter.value;
        const filtered = stores.filter(s => {
          const matchesCity = !city || s.city === city;
          const haystack = `${s.number} ${s.address} ${s.city} ${s.phone}`.toLowerCase();
          const matchesQuery = !q || haystack.includes(q);
          return matchesCity && matchesQuery;
        });
        storeCount.textContent = filtered.length;
        storesBody.innerHTML = filtered.map(s => {
          const phoneHref = `tel:${s.phone.replace(/[^\\d+]/g, '')}`;
          const mapsHref = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(s.address)}`;
          return `<tr class=\"border-t border-slate-100\"><td class=\"px-4 py-3 font-semibold\">${s.number}</td><td class=\"px-4 py-3\">${s.address}</td><td class=\"px-4 py-3\">${s.city}</td><td class=\"px-4 py-3\"><a href=\"${phoneHref}\" class=\"text-red-700 hover:underline\">${s.phone}</a
